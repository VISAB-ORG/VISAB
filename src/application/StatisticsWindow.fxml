<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="1000.0" prefWidth="1200.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.StatisticsWindowController">
   <children>
      <MenuBar layoutY="2.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem fx:id="browseFileMenu" mnemonicParsing="false" onAction="#handleBrowseFileMenu" text="Browse File..." />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Visualizer">
               <items>
                  <MenuItem fx:id="pathViewerMenu" mnemonicParsing="false" onAction="#handlePathViewerMenu" text="Path Viewer" />
                  <MenuItem fx:id="statisticsMenu" mnemonicParsing="false" onAction="#handleStatisticsMenu" text="Statistics" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem fx:id="helpMenu" mnemonicParsing="false" onAction="#handleHelpMenu" text="Help" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="About">
               <items>
                  <MenuItem fx:id="aboutMenu" mnemonicParsing="false" onAction="#handleAboutMenu" text="About" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Label layoutX="25.0" layoutY="41.0" text="Statistics">
         <font>
            <Font size="73.0" />
         </font></Label>
      <Button fx:id="loadStatistics" layoutX="25.0" layoutY="285.0" mnemonicParsing="false" onAction="#handleLoadStatistics" prefHeight="25.0" prefWidth="153.0" text="Load Statistics" />
      <ComboBox fx:id="comboBox" layoutX="25.0" layoutY="159.0" prefHeight="25.0" prefWidth="282.0" style="-fx-border-color: rgb(68,114,196);" />
      <Label fx:id="infoLabel" layoutX="25.0" layoutY="200.0" prefHeight="77.0" prefWidth="282.0" textFill="RED" wrapText="true" />
      <TableView fx:id="statisticsTable" layoutX="417.0" layoutY="59.0" prefHeight="251.0" prefWidth="694.0" style="-fx-border-color: rgb(68,114,196); -fx-border-width: 2;" />
      <StackedBarChart fx:id="planChartCBRBot" layoutX="25.0" layoutY="338.0" prefHeight="300.0" prefWidth="1100.0" style="-fx-border-color: rgb(68,114,196); -fx-border-width: 2;">
        <xAxis>
          <CategoryAxis side="BOTTOM" fx:id="xAxisPlanChartCBRBot" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="yAxisPlanChartCBRBot" side="LEFT" />
        </yAxis>
      </StackedBarChart>
      <StackedBarChart fx:id="planChartScriptBot" layoutX="25.0" layoutY="660.0" prefHeight="300.0" prefWidth="1100.0" style="-fx-border-color: rgb(68,114,196); -fx-border-width: 2;">
        <xAxis>
          <CategoryAxis side="BOTTOM" fx:id="xAxisPlanChartScriptBot" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="yAxisPlanChartScriptBot" side="LEFT" />
        </yAxis>
      </StackedBarChart>
   </children>
</AnchorPane>
