<AnchorPane prefHeight="1600.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.visab.newgui.visualize.settlers.view.SettlersStatisticsView">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <center>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" percentWidth="50" />
                        <ColumnConstraints halignment="CENTER" percentWidth="50" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints percentHeight="2.0" prefHeight="15.0" />
                        <RowConstraints maxHeight="555.0" minHeight="456.0" prefHeight="475.0" />
                        <RowConstraints maxHeight="995.0" minHeight="160.0" prefHeight="923.0" />
                        <RowConstraints maxHeight="630.0" minHeight="97.0" prefHeight="98.0" />
                    </rowConstraints>
                    <children>
                        <HBox fx:id="planUsageHBox" GridPane.columnSpan="2" GridPane.rowIndex="2" />
                        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="1">
                            <children>
                                <Label text="Comparison Statistics">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets bottom="10.0" top="5.0" />
                                    </VBox.margin>
                                </Label>
                                <TableView fx:id="comparisonStatistics" prefHeight="428.0" prefWidth="525.0">
                                    <columns>
                                        <TableColumn prefWidth="116.0" text="Measure">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="rowDescription" />
                                            </cellValueFactory>
                                        </TableColumn>
                                    </columns>
                                    <VBox.margin>
                                        <Insets bottom="10.0" right="5.0" />
                                    </VBox.margin>
                                </TableView>
                                <Button fx:id="chartButton" onAction="#handleChartButtonAction" text="Show in chart" />
                            </children>
                        </VBox>
                        <CheckBox fx:id="isLiveViewActive" text="LiveView still active" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="CENTER" />
                        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <Label text="Comparison Graph">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets left="15.0" top="5.0" />
                                    </VBox.margin>
                                </Label>

                                <Button fx:id="showDetailsButton" onAction="#handleShowDetailsButtonAction" text="Show Detail" />
                                <LineChart fx:id="playerStats" prefHeight="502.0" prefWidth="530.0">
                                    <xAxis>
                                        <NumberAxis label="Round" side="bottom" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis label="" side="left" />
                                    </yAxis>
                                </LineChart>
                            </children>
                        </VBox>
                    </children>
                    <BorderPane.margin>
                        <Insets left="20.0" right="20.0" />
                    </BorderPane.margin>
                </GridPane>
            </center>
            <top>
                <Label prefHeight="34.0" prefWidth="1081.0" text="Settlers Statistics View" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="28.0" />
                    </font>
                </Label>
            </top>
        </BorderPane>
    </children>
</AnchorPane>