<AnchorPane prefHeight="400.0" prefWidth="800.0" stylesheets="@../../../../template_style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.visab.newgui.settings.view.SettingsView">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="800.0" styleClass="body">
         <center>
            <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="800.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="5.0" vgrow="SOMETIMES" />
                  <RowConstraints />
              </rowConstraints>
               <children>
                  <Label fx:id="webApiPortLabel" text="Web Api Port:" GridPane.rowIndex="0">
                     <GridPane.margin>
                        <Insets left="10.0" />
                     </GridPane.margin>
                  </Label>
                  <Label fx:id="sessionTimeoutLabel" text="Session Timeout:" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets left="10.0" />
                     </GridPane.margin>
                  </Label>
                  <Label fx:id="allowedGamesLabel" text="Allowed Games:" GridPane.rowIndex="2">
                     <GridPane.margin>
                        <Insets left="10.0" />
                     </GridPane.margin>
                  </Label>
                  <TextField fx:id="webApiPortField" styleClass="listView_box" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <TableView fx:id="sessionTimeoutsTable" editable="true" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <columns>
                      <TableColumn fx:id="gamesColumn" prefWidth="75.0" text="Game" />
                      <TableColumn fx:id="timeoutColumn" prefWidth="75.0" text="Session Timeout" />
                    </columns>
                  </TableView>
                  <TextField fx:id="allowedGamesField" styleClass="listView_box" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <HBox prefHeight="23.0" prefWidth="281.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                     <children>
                        <Button fx:id="returnButton" mnemonicParsing="false" onAction="#handleReturnButtonAction" prefHeight="28.0" prefWidth="127.0" text="Return">
                           <HBox.margin>
                              <Insets right="10.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveButtonAction" prefHeight="28.0" prefWidth="149.0" text="Save">
                           <HBox.margin>
                              <Insets top="5.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <Button fx:id="editSessionTimeoutButton" mnemonicParsing="false" onAction="#handleEditSessionTimeoutButtonAction" text="Edit" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <Button fx:id="editAllowedGamesButton" mnemonicParsing="false" onAction="#handleEditAllowedGamesButtonAction" text="Edit" GridPane.columnIndex="2" GridPane.rowIndex="2" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="15.0" left="10.0" right="10.0" top="5.0" />
               </BorderPane.margin>
            </GridPane>
         </center>
         <top>
            <Pane prefHeight="26.0" prefWidth="548.0" styleClass="menu-bar" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="24.0" fitWidth="43.0" layoutX="17.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../img/visab_innerLogo1.png" />
                     </image>
                  </ImageView>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin></Pane>
         </top>
      </BorderPane>
