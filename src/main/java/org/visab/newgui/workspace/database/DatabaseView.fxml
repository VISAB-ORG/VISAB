<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.control.cell.TreeItemPropertyValueFactory?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="675.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.visab.newgui.workspace.database.DatabaseView">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" />
        <ColumnConstraints hgrow="SOMETIMES" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <TreeTableView fx:id="explorerView">
            <columns>
                <TreeTableColumn fx:id="nameColumn" prefWidth="400.0" text="Name">
                    <cellValueFactory>
                        <TreeItemPropertyValueFactory property="name" />
                    </cellValueFactory>
                </TreeTableColumn>
                <TreeTableColumn fx:id="modifiedColumn" prefWidth="150.0" text="Last modified">
                    <cellValueFactory>
                        <TreeItemPropertyValueFactory property="lastModified" />
                    </cellValueFactory>
                </TreeTableColumn>
                <TreeTableColumn prefWidth="75.0" text="Size in KB">
                    <cellValueFactory>
                        <TreeItemPropertyValueFactory property="size" />
                    </cellValueFactory>
                </TreeTableColumn>
            </columns>
        </TreeTableView>
        <GridPane GridPane.columnIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="addButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Add Files" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button fx:id="removeButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#removeAction" text="Delete file" GridPane.rowIndex="1" />
                <Button fx:id="showInExplorerButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Show in explorer" />
            <Button fx:id="refreshButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Refresh" GridPane.columnIndex="1" />
            </children>
        </GridPane>
    </children>
</GridPane>
