      <CheckBox fx:id="listActiveCheckbox" alignment="CENTER" contentDisplay="CENTER" disable="true" mnemonicParsing="false" text="List active" GridPane.rowIndex="1" />
      <TextField fx:id="listNameField" />
      <TableView fx:id="listItemsTable" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowSpan="2">
        <columns>
          <TableColumn prefWidth="75.0" text="Name">
            <cellValueFactory>
                <PropertyValueFactory property="name" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn prefWidth="75.0" text="Price">
            <cellValueFactory>
                <PropertyValueFactory property="price" />
            </cellValueFactory>
          </TableColumn>
        </columns>
      </TableView>
      <Button mnemonicParsing="false" onAction="#switchActiveAction" text="Switch active" GridPane.rowIndex="2" />
      <Button mnemonicParsing="false" onAction="#addItemAction" text="Add item" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   </children>
</GridPane>
